@model GamesDetailViewModel

<h2>Game Details</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@Model.Title</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.Id</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Title</dt>
            <dd>@Model.Title</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Rating</dt>
            <dd>@Model.Rating</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Developer</dt>
            <dd>@Model.DeveloperName</dd>
        </dl>
    </div>
</div>
